generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Link {
  id         String    @id @default(cuid())
  name       String?
  url        String
  note       String?
  createAt   DateTime  @default(now())
  categoryId String?
  category   Category? @relation(fields: [categoryId], references: [id])
}

model Category {
  id    String @id @default(cuid())
  name  String
  links Link[]
}
